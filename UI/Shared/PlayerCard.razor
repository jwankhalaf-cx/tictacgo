<div class="grid justify-items-center mb-5">
    <div class="bg-indigo-950 w-28 h-48 grid content-between justify-items-center justify-between rounded-xl p-1 @GetActiveStateCssClasses(Active)">
            <div class="rounded-full min-w-ful h-20 w-20 max-w-max mx-2">
                <img src="@Image"/>
            </div>
            <div class="grid content-center text font-semibold w-12 h-9 max-w-max">
                <h1 class="text-white text-center outline-0">@Name</h1>
            </div>
            <div class="max-w-full max-h-full h-12 w-8 text-center flex items-center justify-center">
                <img src="@Mark" class="w-full h-full"/>
            </div>
    </div>
    
    @if (Active) {
        
        <div class="text-white text-lg font-semibold text-center mt-2">Your turn</div>
    }

</div>

@code {

    [Parameter]
    public string Image { get; set; } = null!;

    [Parameter]
    public string Name { get; set; } = null!;

    [Parameter]
    public string Mark { get; set; } = null!;

    [Parameter]
    public bool Active { get; set; } = false;

    private string GetActiveStateCssClasses(bool Active) {
        return Active == true ? "border-2 border-white" : "";
    }
}