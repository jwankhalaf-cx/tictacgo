@page "/game";
@using TicTacGo.Enums
<div class="bg-gradient-to-r from-violet-900 to-purple-900 h-screen">
    <div class="flex justify-center gap-9">
        <PlayerCard Image="https://www.pngall.com/wp-content/uploads/12/Avatar-Profile-Vector.png" Name="Dan" Mark="icons/x.svg" Active="false"></PlayerCard>
        <PlayerCard Image="https://www.pngall.com/wp-content/uploads/12/Avatar-Profile-PNG-Images-HD.png" Name="Emma" Mark="icons/o.svg" Active="true"></PlayerCard>
    </div>
    <GameGrid GridCells="@GridCells" ActiveMark="@ActiveMark" />
</div>

@code {
    public Marks[] GridCells = new Marks[] { Marks.X, Marks.NotSet, Marks.O, Marks.NotSet, Marks.NotSet, Marks.O, Marks.X, Marks.O, Marks.NotSet };
    public Marks ActiveMark = Marks.X;
}