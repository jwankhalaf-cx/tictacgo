@page "/"

@inject NavigationManager Navigation

<PageTitle>TicTacGo | Home</PageTitle>

<div class="flex items-center h-full">
  <div class="flex flex-col items-center justify-center basis-full">
    <Logo/>

    <div class="mb-12">
      <p class="font-['Quicksand'] text-slate-200">Welcome to the best multiplayer tic-tac-toe game on the internet!</p>
    </div>

    <div class="flex flex-col self-stretch">
      <a @onclick="StartGame" class="font-['Quicksand'] text-xl text-center text-slate-200 p-2 w-full border border-white rounded-r-full rounded-l-full mb-3 cursor-pointer">Start Game</a>

      <a class="font-['Quicksand'] text-xl text-center text-slate-200 p-2 w-full border border-white rounded-r-full rounded-l-full cursor-pointer">Join Game</a>
    </div>
  </div>
</div>

@code {

  private void StartGame()
  {
    string gameCode = Guid.NewGuid().ToString("n")[..6];

    Navigation.NavigateTo($"/game/{gameCode}", new NavigationOptions
    {
      HistoryEntryState = "Navigation state"
    });
  }

}