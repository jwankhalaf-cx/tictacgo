<div class="mb-8 border rounded-lg border-white p-2.5 bg-slate-900">
    <h3 class="text-6xl text-amber-400 font-bold text-center tracking-widest uppercase">@GameShareCode</h3>
</div>

<h4 class="font-['Quicksand'] text-slate-200 text-center mb-16">Share code with the other player</h4>

<div class="flex flex-col gap-8 items-center">
    <div class="flex gap-4">
        <span class="relative flex h-4 w-4">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-amber-500 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-4 w-4 bg-amber-600"></span>
        </span>

        <span class="relative flex h-4 w-4">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-amber-500 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-4 w-4 bg-amber-600"></span>
        </span>

        <span class="relative flex h-4 w-4">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-amber-500 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-4 w-4 bg-amber-600"></span>
        </span>
    </div>

    <h4 class="font-['Quicksand'] text-slate-200 text-lg font-semibold">Waiting for other player to join</h4>
</div>

@code
{
    [Parameter]
    public required string GameShareCode { get; set; }
}